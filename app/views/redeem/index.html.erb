<%= pageTitle 'Smile Sciences | Voucher Redemptions' %>
<%= addStylesheet('datepicker') %>

<div class="container">
  <h1>Export Voucher Redemptions</h1>
  <div class="well">
    <% if notice %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice %>
    </div>
    <% end %>

    <%= form_tag '/redeem/export/index', :method => :get do %>
      <div class="row-fluid">
        <div class="span6">
          <label><b>Start Date:</b></label>
          <div class="input-append date" id="dp1" data-date="<%= @todayPickerFormat %>" data-date-format="yyyy-mm-dd" style="width:100%">
            <input type="text" name="start" class="span11" value="<%= @todayPickerFormat %>" readonly />
            <span class="add-on"><i class="icon-th"></i></span>
          </div>
        </div>
        <div class="span6">
          <label><b>End Date:</b></label>
          <div class="input-append date" id="dp2" data-date="<%= @todayPickerFormat %>" data-date-format="yyyy-mm-dd" style="width:100%">
            <input type="text" name="end" class="span11" value="<%= @todayPickerFormat %>" readonly />
            <span class="add-on"><i class="icon-th"></i></span>
          </div>
        </div>
      </div>
      <div class="form-actions" style="margin-bottom: 0; padding-bottom: 0;">
        <button type="submit" id="redeemVouchers" class="btn btn-primary">Export</button>
      </div>
    <% end %>
  </div>
</div>

<%= additionalJS('bootstrap-datepicker') %>
<%= additionalJS('redeem') %>
